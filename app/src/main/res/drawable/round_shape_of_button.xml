<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@color/white_gray" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="@color/parrot" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@color/lovender" />
    <!--Default Background Color -->
    <item android:color="@android:color/white" />
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@color/white"
    tools:context="com.example.uiwidgets.UIWidgetsA">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:alpha="0.8"
        android:background="@null"
        android:contentDescription="@string/email_id"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/registration_design">

        <TextView
            android:id="@+id/txtRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="@string/registration"
            android:textAllCaps="true"
            android:textColor="@color/navyblue"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRegistration"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/edittext_design"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="@dimen/_8sdp"
            android:hint="@string/email_id"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:autofillHints="" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/edittext_design"
            android:drawableStart="@drawable/ic_baseline_pass_24"
            android:drawablePadding="@dimen/_8sdp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/gender"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/male"
                android:textSize="@dimen/_10sdp"
                tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:checked="true"
                android:text="@string/famale"
                android:textSize="@dimen/_10sdp" />
        </RadioGroup>

        <TextView
            android:id="@+id/cources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:text="@string/cources"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/checkboxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cources"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:text="@string/c"
                android:textSize="@dimen/_10sdp" />

            <CheckBox
                android:id="@+id/java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/java"
                android:textSize="@dimen/_10sdp" />

            <CheckBox
                android:id="@+id/python"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/python"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkboxes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/navyblue"
            android:text="@string/sign_up" />

        <RelativeLayout
            android:id="@+id/container1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <!-- Ripple effect-->
            <ImageButton
                android:id="@+id/simpleImageButton"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_120sdp"
                android:background="@drawable/ripple"
                android:contentDescription="@string/email"
                android:src="@drawable/ic_baseline_login_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/already_user"
                android:textColor="@color/navyblue"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:checked="true"
            android:minHeight="@dimen/_48sdp"
            android:text="@string/theme"
            android:textSize="@dimen/_10sdp"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

    </RelativeLayout>
</RelativeLayout>